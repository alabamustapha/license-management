<!DOCTYPE html>
<html>
<head>
  {{ include("apl_includes/header_meta.twig") }}
</head>
<body class="hold-transition skin-black sidebar-mini">
<div class="wrapper">
  <header class="main-header">
    {{ include("apl_includes/header.twig") }}
  </header>
  <aside class="main-sidebar">
    {{ include("apl_includes/sidebar.twig") }}
  </aside>
  <div class="content-wrapper">
    <section class="content-header">
      <div class="{{ page_message_class }}">
        <h4>{{ page_title }}</h4>
        <p>{{ page_message|striptags("<a><b><br><i><li><strong><u><ul>")|raw }}</p>
      </div>
    </section>
    <section class="content">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">{{ page_title }}</h3>
        </div>
        <form action="{{ script_filename }}" method="post">
        <div class="box-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>API Secret</label>
                <input type="text" name="api_key_secret" value="{{ api_key_secret }}" class="form-control" placeholder="Unique API secret">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>API IP</label>
                <input type="text" name="api_key_ip" value="{{ api_key_ip }}" class="form-control" placeholder="IP address to accept API requests from (optional)">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Add Products</label>
                <select name="api_key_products_add" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_products_add is defined and api_key_products_add==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Edit Products</label>
                <select name="api_key_products_edit" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_products_edit is defined and api_key_products_edit==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Add Clients</label>
                <select name="api_key_clients_add" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_clients_add is defined and api_key_clients_add==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Edit Clients</label>
                <select name="api_key_clients_edit" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_clients_edit is defined and api_key_clients_edit==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Add Licenses</label>
                <select name="api_key_licenses_add" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_licenses_add is defined and api_key_licenses_add==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Edit Licenses</label>
                <select name="api_key_licenses_edit" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_licenses_edit is defined and api_key_licenses_edit==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Permissions to Use Search</label>
                <select name="api_key_search" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_search is defined and api_key_search==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>API Key Status</label>
                <select name="api_key_status" class="form-control select2"><option value="1">Active</option><option value="0"{% if api_key_status is defined and api_key_status==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="checkbox icheck">
                <label><input type="checkbox" name="delete_record" value="1"> Delete Record</label>
              </div>
            </div>
          </div>
        </div>
        <div class="box-footer">
            <input type="hidden" name="api_key_id" value="{{ api_key_id }}"><button type="submit" name="submit_ok" class="btn btn-primary">Submit</button>
        </div>
        </form>
      </div>
    </section>
  </div>
  <footer class="main-footer">
    {{ include("apl_includes/footer.twig") }}
  </footer>
</div>
{{ include("apl_includes/footer_meta.twig") }}
</body>
</html>