<!DOCTYPE html>
<html>
<head>
  {{ include("apl_includes/header_meta.twig") }}
</head>
<body class="hold-transition skin-black sidebar-mini">
<div class="wrapper">
  <header class="main-header">
    {{ include("apl_includes/header.twig") }}
  </header>
  <aside class="main-sidebar">
    {{ include("apl_includes/sidebar.twig") }}
  </aside>
  <div class="content-wrapper">
    <section class="content-header">
      <div class="{{ page_message_class }}">
        <h4>{{ page_title }}</h4>
        <p>{{ page_message|striptags("<a><b><br><i><li><strong><u><ul>")|raw }}</p>
      </div>
    </section>
    <section class="content">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">{{ page_title }}</h3>
        </div>
        <form action="{{ script_filename }}" method="post">
        <div class="box-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Product</label>
                <select name="product_id" class="form-control select2" style="width:100%;" data-placeholder="Choose product" readonly><option></option>{% for item_array in products_array %}<option value="{{ item_array.value }}"{{ item_array.selected }}>{{ item_array.title }}</option>{% endfor %}</select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Client</label>
                <select name="client_id" class="form-control select2" style="width:100%;" data-placeholder="Choose client" readonly><option></option>{% for item_array in clients_array %}<option value="{{ item_array.value }}"{{ item_array.selected }}>{{ item_array.title }}</option>{% endfor %}</select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>License Code</label>
                <input type="text" name="license_code" value="{{ license_code }}" class="form-control" placeholder="License code (only required when no client is selected)" readonly>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Order Number</label>
                <input type="text" name="license_order_number" value="{{ license_order_number }}" class="form-control" placeholder="Order number (optional)">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Licensed IP</label>
                <input type="text" name="license_ip" value="{{ license_ip }}" class="form-control" placeholder="IP address to be licensed (optional)">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Licensed Domain</label>
                <input type="text" name="license_domain" value="{{ license_domain }}" class="form-control" placeholder="Domain to be licensed (like clientdomain.com, clientdomain.com/path, or sub.clientdomain.com) (optional)">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Always Require Domain</label>
                <select name="license_require_domain" class="form-control select2"><option value="1">Yes</option><option value="0"{% if license_require_domain is defined and license_require_domain==0 %} selected{% endif %}>No</option></select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Installations Limit</label>
                <input type="text" name="license_limit" value="{{ license_limit }}" class="form-control" placeholder="Maximum number of installations (optional)">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>License Expiration Date</label>
                <input type="text" name="license_expire_date" value="{{ license_expire_date }}" class="form-control" placeholder="License expiration date (optional)" data-inputmask="'alias':'yyyy-mm-dd'" data-mask>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Updates Expiration Date</label>
                <input type="text" name="license_updates_date" value="{{ license_updates_date }}" class="form-control" placeholder="Updates expiration date (optional)" data-inputmask="'alias':'yyyy-mm-dd'" data-mask>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>License Status</label>
                <select name="license_status" class="form-control select2"><option value="1">Active</option><option value="0"{% if license_status is defined and license_status==0 %} selected{% endif %}>Inactive</option></select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Comments</label>
                <input type="text" name="license_comments" value="{{ license_comments }}" class="form-control" placeholder="Extra comments (optional)">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="checkbox icheck">
                <label><input type="checkbox" name="delete_record" value="1"> Delete Record</label>
              </div>
            </div>
          </div>
        </div>
        <div class="box-footer">
            <input type="hidden" name="license_id" value="{{ license_id }}"><button type="submit" name="submit_ok" class="btn btn-primary">Submit</button>
        </div>
        </form>
      </div>
    </section>
  </div>
  <footer class="main-footer">
    {{ include("apl_includes/footer.twig") }}
  </footer>
</div>
{{ include("apl_includes/footer_meta.twig") }}
</body>
</html>